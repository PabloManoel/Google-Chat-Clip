{
	"name": "Ponto-Mobicare",
	"version": "1.0",
	"description": "Um facilitador para o momento de registrar o ponto",
	"permissions": [
		"activeTab",
		"declarativeContent",
		"storage"
	],
	"content_security_policy": "script-src 'self' https://kit.fontawesome.com/; object-src 'self'",
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},
	"options_page": "options.html",
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/mobi-icon/mobi-icon-16.png",
			"32": "images/mobi-icon/mobi-icon-32.png",
			"48": "images/mobi-icon/mobi-icon-48.png",
			"128": "images/mobi-icon/mobi-icon-128.png"
		}
	},
	"icons": {
		"16": "images/get_started16.png",
		"32": "images/get_started32.png",
		"48": "images/get_started48.png",
		"128": "images/get_started128.png"
	},
	"manifest_version": 2
}